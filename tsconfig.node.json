{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noEmit": true,
    "target": "ES2022",
    "lib": ["ES2022"]
  },
  "include": ["src/main/**/*.ts", "src/preload/**/*.ts", "vite.config.ts"]
}
